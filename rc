;;* Custom functions TODO

(defun fsh/toggle-window-visible (w)
  (if (window-visible-p w)
      (hide-window w)
    (show-window w)))

;;** fsh/display-message
(defun fsh/display-message (message #!optional seconds)
  (display-message message)
  (make-timer (lambda () (display-message nil)) (or seconds 3)))


